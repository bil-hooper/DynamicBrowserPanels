<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows7.0</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <AssemblyName>DynamicBrowserPanels</AssemblyName>
    <RootNamespace>DynamicBrowserPanels</RootNamespace>
    <ApplicationIcon>Rubik.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Sync\**" />
    <EmbeddedResource Remove="Sync\**" />
    <None Remove="Sync\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Rubik.ico" />
  </ItemGroup>

  <ItemGroup>
    <!-- Microsoft Edge WebView2 SDK -->
    <PackageReference Include="Dropbox.Api" Version="7.0.0" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3719.77" />
    
    <!-- System.Text.Json for state serialization -->
    <PackageReference Include="System.Text.Json" Version="10.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UI\" />
  </ItemGroup>

</Project>
